doctype html
- var timeStampInMs = Date.now();
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/lib.min.css')
    link#theme(rel='stylesheet', href="/css/light.min.css?" + timeStampInMs)
    link(rel='icon', href='/img/icon.png', type='image/png')

  include ../inc/mixins

  block vars

  body
    #illustration
      .filter
      - var bg = "background-image:url(" + bgUrl + ")";
      .cover(style=bg)

    include ../inc/sidebar
    block sidebar

    include ../inc/header

    main
      #cards.clearfix 
        block main

    include ../inc/footer

    script(src="/js/app.min.js?" + timeStampInMs)
