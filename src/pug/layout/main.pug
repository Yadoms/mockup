doctype html
- var timeStampInMs = Date.now();
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(rel='stylesheet', href='/css/lib.min.css')
    link#theme(rel='stylesheet', href="/css/light.min.css?" + timeStampInMs)
    link(rel='icon', href='/img/icon.png', type='image/png')

  block vars

  body
    #illustration
      .filter
      .cover

    #sidebar.w-16.bg-frontColor(class='hover:w-48 hover:shadow-2xl')
      nav#menu
        ul
      #yadoms-icon
        a.text-primaryColor(href='https://yadoms.com', target='_blank')
          span.icon
            img(src='/img/icon.png')
          span.word Yadoms.com

    include ../inc/header

    main
      #cards.clearfix 
        block main

    include ../inc/footer

    script(src="/js/app.min.js?" + timeStampInMs)
