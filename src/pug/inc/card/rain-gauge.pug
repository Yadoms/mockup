mixin rain-gauge(hour, day, digital = true)
  .rain-gauge.flex.items-center.card-width-2.card-height-1
    .w-full.flex.justify-center
      .mr-2.pr-2.border-r.border-primaryColor.inline-block
        +numeric-display(hour, 1, 'mm', 'depuis 1h', digital)
      .inline-block
        +numeric-display(day, 1, 'mm', 'depuis 24h', digital)
