mixin wind(speed, direction, unit = 'km/h', digital = true)
  .wind.relative.h-24.w-24
      - var wdir = "wind-" + direction;
      .ring.relative.border-2.border-primaryColor.w-full.h-full.rounded-full.transform.duration-200.inset-0.flex.justify-center(
        class=wdir
      )
        .inline-block.absolute.mono-font-xs
          i.fa.fa-caret-up
      .absolute.flex.flex-col.justify-center.text-xs.text-center.leading-tight.h-full.inset-0
        - var cl = digital ? "font-mono" : "";
        span(class=cl)= speed
        span= unit
