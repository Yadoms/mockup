mixin thermostat(value, state, current, unit, digital = true)
  .flex.flex-col
    .w-full
      .flex.justify-around.mx-auto(class='w-2/3')
        if state
          i.fas.fa-fire
        if current
          - var cl = digital ? "font-mono" : "";
          span(class=cl)= current
          span= unit
    .w-full
      +dimmer(value, 0, 100, 1, unit, digital)
