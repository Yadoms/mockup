mixin numeric-display(value, decimals = 0, unit = '', capture = '')
  .numeric-display.w-full
    - var val = parseFloat(value).toFixed(decimals);
    if capture
      p.text-center.text-xs.text-shadowColor= capture
    .text-right.rounded-lg.text-highlightColor.flex.items-end.py-1.px-2.mt-2.glass.shadow-inner.items-center
      .flex-grow
        .relative.overflow-hidden.text-3xl.font-mono.inline-block
          .hollow.absolute.right-0.top-0.opacity-12 8.8.8.8.8.8.8.8.8.8.
          .digits= val
      .text-xl= unit
