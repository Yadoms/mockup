mixin dimmer(value, min = 0, max = 100, step = 1, suffix = '%')
  .dimmer.flex.flex-row.rounded-lg.h-10
    button.h-full.w-10.rounded-l.outline-none.bg-activeColor.text-highlightColor(class="hover:bg-highlightColor hover:text-activeColor", data-action="decrement")
      .m-auto.text-lg.font-bold
        i.fas.fa-minus
    .relative.h-full.bg-activeColor.text-highlightColor
      input.outline-none.text-center.h-full.bg-activeColor(type="number", value=value, min=min, max=max, step=step)
      .absolute.inline-block.inset-y-0.right-0.flex.items-center.pr-1
        span.text-xs= suffix
    button.h-full.w-10.rounded-r.outline-none.bg-activeColor.text-highlightColor(class="hover:bg-highlightColor hover:text-activeColor", data-action="increment")
      .m-auto.text-lg.font-bold
        i.fas.fa-plus