mixin teleinfo-forecast(color)
  - 
    var clr = color == 'red' ? 'bg-red-600 text-red-600 border-red-800' 
                             : (color == 'blue' ? 'bg-blue-600 text-blue-600 border-blue-800' 
                                                : 'bg-white text-white border-gray-300'
                               )
  .teleinfo-forecast
    .square.rounded-full.block.mx-auto.border-2(class=clr)