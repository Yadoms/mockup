mixin menu_entry_content(icon, text, target)
  a.block.align-middle.text-gray-600.no-underline.flex(class="md:py-3 hover:text-teal-400 dark:text-gray-400 dark-hover:text-teal-600", href=target)
    span.inline-block.w-6.text-center
      i(class=icon)
    span.absolute.text-sm.opacity-0.ml-3.ease-in-out.transition-all.duration-300.ml-6.pl-2(class="md:pb-0")= text

mixin menu_entry(icon, text, target, isActive = false)
  if isActive
    li.pl-4.my-2(class="md:my-0 border-l-4 border-teal-600 active")
      +menu_entry_content(icon, text, target)
  else
    li.pl-4.my-2(class="md:my-0")
      +menu_entry_content(icon, text, target)

#sidebar.h-screen.w-16.menu.bg-white.pr-4.flex.items-center.fixed.shadow.ease-in-out.transition-all.duration-300.z-50(class="hover:w-48 hover:shadow-2xl dark:bg-blue-900 dark:shadow-white dark-hover:shadow-2xl-white")
  ul
    +menu_entry('fas fa-home', 'Accueil', '/', true)
    +menu_entry('fas fa-door-open', 'Volets', '/')
    +menu_entry('far fa-chart-bar', 'Suivi', '/')
